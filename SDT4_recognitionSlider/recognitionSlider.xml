<ModulePrefs title="hello world example" />
<Content type="html">
<![CDATA[
<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Recognition Slider </title>
    <link rel="stylesheet" href="https://raw.githack.com/gards25/sdt4Slider/master/SDT4_recognitionSlider/themes/dark/dark.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="https://raw.githack.com/gards25/sdt4Slider/master/SDT4_recognitionSlider/css/nivo-slider.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="https://raw.githack.com/gards25/sdt4Slider/master/SDT4_recognitionSlider/css/style.css" type="text/css" media="screen" />
</head>
<body>
    <div id="wrapper">
        <div class="slider-wrapper theme-dark">
            <div id="slider" class="nivoSlider">
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Marix.jpg" title="Marix <br> Member of the Month <br> January 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Ynna.JPG" title="Ynna <br> Member of the Month <br> February 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Kevin.jpg" title="Kevin <br> Member of the Month <br> March 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Marix.jpg" title="Marix <br> Member of the Month <br> April 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Marix.jpg" title="Marix <br> Member of the Month <br> May 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Eri.jpg" title="Eri <br> Member of the Month <br> June 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Marix.jpg" title="Marix <br> Member of the Month <br> July 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Marix.jpg" title="Marix <br> Member of the Month <br> August 2017" />
                <img src="https://raw.githubusercontent.com/gards25/sdt4Slider/master/SDT4%20Site%20Images/Christian.jpg" title="Christian <br> Member of the Month <br> September 2017" />
            </div>
        </div>
    </div>
    
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://raw.githack.com/gards25/sdt4Slider/master/SDT4_recognitionSlider/js/jquery.nivo.slider.js"></script>
    <script type="text/javascript">
    $(window).load(function() {
        $('#slider').nivoSlider(
        {
         effect: 'random',                 // Specify sets like: 'fold,fade,sliceDown'
         slices: 2,                     // For slice animations
         boxCols: 8,                     // For box animations
         boxRows: 4,                     // For box animations
         animSpeed: 500,                 // Slide transition speed
         pauseTime: 3000,                 // How long each slide will show
         startSlide: 8,                     // Set starting Slide (0 index)
         directionNav: true,             // Next & Prev navigation
         controlNav: true,                 // 1,2,3... navigation
         controlNavThumbs: false,         // Use thumbnails for Control Nav
         pauseOnHover: true,             // Stop animation while hovering
         manualAdvance: false,             // Force manual transitions
         prevText: 'Prev',                 // Prev directionNav text
         nextText: 'Next',                 // Next directionNav text
         randomStart: false,             // Start on a random slide
        });
    });
    </script>
</body>
</html>
]]></Content>
</Module>
